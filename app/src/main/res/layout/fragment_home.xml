<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@color/black">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="102dp"
                android:layout_height="112dp"
                android:src="@drawable/telegram"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintEnd_toStartOf="@+id/imageView5"
                app:layout_constraintHorizontal_bias="0.47"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView5"
                app:layout_constraintVertical_bias="0.473" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingTop="15dp"
                android:src="@drawable/logonav"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.537"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="90dp"
                android:layout_height="97dp"
                android:src="@drawable/whatsapp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="@+id/imageView5" />

            <LinearLayout
                android:id="@+id/WorkExperience"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/InfoMy"
                app:layout_constraintTop_toBottomOf="@+id/textView5">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:text="Опыт работы :"
                    android:textColor="#FF0000" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Разработка мобильный приложений на андроид  на фриланс бирже , c которыми вы можете ознакомиться ниже или  перейти в нужный раздел"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:freezesText="false"
                android:paddingTop="10dp"
                android:text="Гижицкий Константин"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/imageView5"
                app:layout_constraintStart_toStartOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" />

            <LinearLayout
                android:id="@+id/InfoMy"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/WorkExperience"
                app:layout_constraintEnd_toEndOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:text="О себе :"
                    android:textColor="#00C6F8" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Студент прикладкой информатики. Выбрал развитие в сфере мобильной разработки  "
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/OneOrder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/InfoMy">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Проекты :"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="80dp"
                        android:layout_height="180dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/callhistory1" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="80dp"
                        android:layout_height="180dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/callhistory2" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="180dp"
                        android:layout_weight="1"
                        android:src="@drawable/callhistory3" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/callhistory4" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Требования заказа :"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="- фоновое приложение\n -приложение сохраняет номер , время разговора, слот симкарты , дату . \n - Эту информацию пользователь может узнать на веб странице так же может пройти там регистрацию "
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow_down" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button"
                    android:layout_width="200dp"
                    android:layout_height="41dp"
                    android:layout_gravity="center"
                    android:background="#FF0000"
                    android:backgroundTint="#FF0101"
                    android:text="Подробнее о заказе"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp"
                    app:iconTint="#FF0000"
                    app:rippleColor="#FF0000" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/TwoOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/OneOrder">

                <LinearLayout
                    android:id="@+id/linearLayout3426"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_background"
                    android:orientation="vertical"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/map1"
                            android:layout_width="80dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/map1" />

                        <ImageView
                            android:id="@+id/map2"
                            android:layout_width="80dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/map2" />

                        <ImageView
                            android:id="@+id/map3"
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            android:src="@drawable/map3" />

                        <ImageView
                            android:id="@+id/map4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/map4" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/trebForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Требования заказа :"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/InfoMap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text=" -Приложение для навигации по Университету   КГИПУ .\n -Поиск кабинетов\n -Навигация \n -Масштабирование карты \n -информация о кабинетах"
                        android:textColor="#000000" />

                    <ImageView
                        android:id="@+id/DrowForMap"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/arrow_down" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/buttonForMap"
                        android:layout_width="200dp"
                        android:layout_height="41dp"
                        android:layout_gravity="center"
                        android:background="#FF0000"
                        android:backgroundTint="#FF0101"
                        android:text="Подробнее о заказе"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp"
                        app:iconTint="#FF0000"
                        app:rippleColor="#FF0000" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ThreeOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                app:layout_constraintEnd_toEndOf="@+id/TwoOrder"
                app:layout_constraintStart_toStartOf="@+id/TwoOrder"
                app:layout_constraintTop_toBottomOf="@+id/TwoOrder">

                <LinearLayout
                    android:id="@+id/linearLayout3424"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:background="#D9D9D9"
                    android:orientation="vertical"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/constr1"
                            android:layout_width="80dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/constructor" />

                        <ImageView
                            android:id="@+id/constr2"
                            android:layout_width="80dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/constructor2" />

                        <ImageView
                            android:id="@+id/nostr3"
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            android:src="@drawable/constructor3" />

                        <ImageView
                            android:id="@+id/constr4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/constructor4" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/trebFormConstr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Требования заказа :"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/InfoConstr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="  -Приложение конструктор \n  -Приложение можно было адаптировать под любую компанию \n  -Была настройка приложения изображения и внешний вид через базу данных."
                        android:textColor="#000000" />

                    <ImageView
                        android:id="@+id/DrowForConstr"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/arrow_down" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/ButtonForConstr"
                        android:layout_width="200dp"
                        android:layout_height="41dp"
                        android:layout_gravity="center"
                        android:background="#FF0000"
                        android:backgroundTint="#FF0101"
                        android:text="Подробнее о заказе"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp"
                        app:iconTint="#FF0000"
                        app:rippleColor="#FF0000" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/FourOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ThreeOrder">

                <LinearLayout
                    android:id="@+id/linearLayout3425"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:background="#D9D9D9"
                    android:orientation="vertical"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/Rest1"
                            android:layout_width="80dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/terazza1" />

                        <ImageView
                            android:id="@+id/Rest2"
                            android:layout_width="80dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/terazza2" />

                        <ImageView
                            android:id="@+id/Rest3"
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            android:src="@drawable/terazza3" />

                        <ImageView
                            android:id="@+id/Rest4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/terazza4" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/trebFromRest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Требования заказа :"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/InfoRest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text=" -Создать приложение с Меню ресторана. \n -Выбор доставки \n - Новости \n -История заказов \n -Регестрация по номеру телефона"
                        android:textColor="#000000" />

                    <ImageView
                        android:id="@+id/DrowForRest"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/arrow_down" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/ButtonForRest"
                        android:layout_width="200dp"
                        android:layout_height="41dp"
                        android:layout_gravity="center"
                        android:background="#FF0000"
                        android:backgroundTint="#FF0101"
                        android:text="Подробнее о заказе"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp"
                        app:iconTint="#FF0000"
                        app:rippleColor="#FF0000" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>